<%- include('../partials/head') %>
<body class="bg-gray-900 text-white">
  <%- include('../partials/header') %>
  <div class="container items-center mx-auto text-center mt-10">
    <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 animate-pulse">Airbnb</h1>
  </div>
  <div class="container mx-auto text-center mt-10">
    <h2 class="text-2xl font-semibold mb-5 text-indigo-400">Here are the Favourite homes:</h2>
    <!-- Change to grid layout -->
    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% favouritesHomes.forEach(home => { %>
      <li class="bg-gray-800 p-4 mx-4 rounded-lg shadow-lg transform transition duration-500 hover:scale-105 hover:bg-gray-700">
        <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-lg">
        <div class="p-4">
          <h3 class="text-xl font-semibold"><%= home.houseName %></h3>
          <p class="text-gray-400"><%= home.address %></p>
          <p class="text-gray-300 mt-2"><%= home.description %></p>
          <p class="text-gray-300 mt-2">Price: $<%= home.price %></p>
          <p class="text-yellow-400 mt-2">Rating: <%= home.rating %> / 10</p>
        </div>
        <button class="float-left bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Book</button>
        <form action="/favourites/delete/<%= home._id %> " method="post">
          <button type="submit" class="float-right bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Remove</button>
        </form>
      </li>
      <% }) %>
    </ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>
</body>
</html>
